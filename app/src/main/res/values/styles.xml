<resources>

    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/textBlack</item>
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="android:windowTitleStyle">@style/ToolbarAppName</item>
    </style>

    <style name="AppTheme.NewEventCommon" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/textBlack</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="AppTheme.NewEvent" parent="AppTheme.NewEventCommon">
        <item name="colorPrimary">@color/colorPrimaryNewEvent</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkNewEvent</item>
        <item name="colorAccent">@color/colorPrimaryNewEvent</item>
        <item name="colorHeadingText">@color/colorHeadingTextNewEvent</item>
    </style>

    <style name="AppTheme.NewReminder" parent="AppTheme.NewEventCommon">
        <item name="colorPrimary">@color/colorPrimaryNewReminder</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkNewReminder</item>
        <item name="colorAccent">@color/colorPrimaryNewReminder</item>
        <item name="colorHeadingText">@color/colorHeadingTextNewReminder</item>
    </style>

    <style name="AppTheme.NewFyi" parent="AppTheme.NewEventCommon">
        <item name="colorPrimary">@color/colorPrimaryNewFyi</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkNewFyi</item>
        <item name="colorAccent">@color/colorPrimaryNewFyi</item>
        <item name="colorHeadingText">@color/colorHeadingTextNewFyi</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Calendar styles -->
    <style name="Calendar" parent="CaldroidDefault">
        <item name="styleCaldroidMonthName">@style/CalendarMonthName</item>
        <item name="styleCaldroidGridView">@style/CalendarGridView</item>
        <item name="styleCaldroidWeekdayView">@style/CalendarWeekday</item>
    </style>

    <style name="CalendarMonthName" parent="CaldroidDefaultMonthName">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/calendarMonthName</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="CalendarGridView" parent="CaldroidDefaultGridView">
        <item name="android:background">@color/windowBackground</item>
        <item name="android:horizontalSpacing">1dp</item>
        <item name="android:padding">1dp</item>
        <item name="android:verticalSpacing">1dp</item>
    </style>

    <style name="CalendarWeekday" parent="CaldroidDefaultWeekday">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/calendarWeekday</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">0dp</item>
    </style>

</resources>
