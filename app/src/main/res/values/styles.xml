<resources>

    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/textBlack</item>
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="android:windowTitleStyle">@style/ToolbarAppName</item>
    </style>

    <style name="Theme.Transparent" parent="android:Theme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="AppTheme.NewEventCommon" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/textBlack</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="AppTheme.NewEvent" parent="AppTheme.NewEventCommon">
        <item name="colorPrimary">@color/colorPrimaryNewEvent</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkNewEvent</item>
        <item name="colorAccent">@color/colorPrimaryNewEvent</item>
        <item name="colorHeadingText">@color/colorHeadingTextNewEvent</item>
    </style>

    <style name="AppTheme.NewReminder" parent="AppTheme.NewEventCommon">
        <item name="colorPrimary">@color/colorPrimaryNewReminder</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkNewReminder</item>
        <item name="colorAccent">@color/colorPrimaryNewReminder</item>
        <item name="colorHeadingText">@color/colorHeadingTextNewReminder</item>
    </style>

    <style name="AppTheme.NewFyi" parent="AppTheme.NewEventCommon">
        <item name="colorPrimary">@color/colorPrimaryNewFyi</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkNewFyi</item>
        <item name="colorAccent">@color/colorPrimaryNewFyi</item>
        <item name="colorHeadingText">@color/colorHeadingTextNewFyi</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Caldroid calendar styles -->
    <style name="CaldroidDefault">
        <item name="styleCaldroidViewLayout">@style/CaldroidDefaultCalendarViewLayout</item>
        <item name="styleCaldroidLeftArrow">@style/CaldroidDefaultLeftButton</item>
        <item name="styleCaldroidRightArrow">@style/CaldroidDefaultRightButton</item>
        <item name="styleCaldroidMonthName">@style/CaldroidDefaultMonthName</item>
        <item name="styleCaldroidGridView">@style/CaldroidDefaultGridView</item>
        <item name="styleCaldroidNormalCell">@style/CaldroidDefaultNormalCell</item>
        <item name="styleCaldroidSquareCell">@style/CaldroidDefaultSquareCell</item>
        <item name="styleCaldroidWeekdayView">@style/CaldroidDefaultWeekday</item>
    </style>

    <style name="CaldroidDefaultCalendarViewLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="CaldroidDefaultArrowButton">
        <item name="android:layout_width">44dp</item>
        <item name="android:layout_height">44dp</item>
    </style>

    <style name="CaldroidDefaultLeftButton" parent="CaldroidDefaultArrowButton">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:background">@drawable/left_arrow</item>
    </style>

    <style name="CaldroidDefaultRightButton" parent="CaldroidDefaultArrowButton">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:background">@drawable/right_arrow</item>
    </style>

    <style name="CaldroidDefaultMonthName">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/calendarMonthName</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="CaldroidDefaultGridView">
        <item name="android:adjustViewBounds">true</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:listSelector">@null</item>
        <item name="android:background">@color/windowBackground</item>
        <item name="android:horizontalSpacing">1dp</item>
        <item name="android:padding">1dp</item>
        <item name="android:verticalSpacing">1dp</item>
    </style>

    <style name="CaldroidDefaultCell">
        <item name="android:textColor">@color/textBlack</item>
        <item name="android:background">@drawable/cell_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CaldroidDefaultNormalCell" parent="CaldroidDefaultCell">
        <item name="android:padding">5dp</item>
    </style>

    <style name="CaldroidDefaultSquareCell" parent="CaldroidDefaultCell" />

    <style name="CaldroidDefaultWeekday">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/calendarWeekday</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">0dp</item>
    </style>

</resources>
