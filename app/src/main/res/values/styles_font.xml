<resources>

    <style name="ToolbarAppName" parent="@android:style/TextAppearance">
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="ToolbarNewEventTitle" parent="@android:style/TextAppearance">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="ToolbarNewEventAction" parent="@android:style/TextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="HeadingNewEvent" parent="@android:style/TextAppearance">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">?attr/colorHeadingText</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="NewEventButtonLabel" parent="@android:style/TextAppearance">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/textBlack</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="NewEventDateTime" parent="@android:style/TextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/textBlack</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TodayCalendarText" parent="@android:style/TextAppearance">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="CalendarDateTodayText" parent="@android:style/TextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/calendarToday</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="CalendarDateActiveText" parent="@android:style/TextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/calendarDateActive</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="CalendarDateInactiveText" parent="@android:style/TextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/calendarDateInactive</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

</resources>
