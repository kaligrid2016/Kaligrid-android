<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar_bottom"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_gravity="bottom"
    android:layout_alignParentBottom="true"
    android:background="@color/colorToolbarBottomBackground"
    android:contentInsetStart="0dp"
    android:contentInsetEnd="0dp"
    android:contentInsetLeft="0dp"
    android:contentInsetRight="0dp"
    app:contentInsetStart="0dp"
    app:contentInsetEnd="0dp"
    app:contentInsetLeft="0dp"
    app:contentInsetRight="0dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/toolbar_bottom_button_margin"
        android:layout_marginBottom="@dimen/toolbar_bottom_button_margin"
        android:layout_weight="1"
        android:src="@drawable/icon_bottom_list_selected"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/toolbar_bottom_button_margin"
        android:layout_marginBottom="@dimen/toolbar_bottom_button_margin"
        android:layout_weight="1"
        android:src="@drawable/icon_bottom_grid"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/toolbar_bottom_button_margin"
        android:layout_marginBottom="@dimen/toolbar_bottom_button_margin"
        android:layout_weight="1"
        android:src="@drawable/icon_bottom_kali"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/toolbar_bottom_button_margin"
        android:layout_marginBottom="@dimen/toolbar_bottom_button_margin"
        android:layout_weight="1"
        android:src="@drawable/icon_bottom_friends"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/toolbar_bottom_button_margin"
        android:layout_marginBottom="@dimen/toolbar_bottom_button_margin"
        android:layout_weight="1"
        android:src="@drawable/icon_bottom_me"/>

</android.support.v7.widget.Toolbar>
