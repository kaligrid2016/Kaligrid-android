<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar_top"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/colorToolbarBottomBackground"
    android:contentInsetStart="0dp"
    android:contentInsetEnd="0dp"
    android:contentInsetLeft="0dp"
    android:contentInsetRight="0dp"
    app:contentInsetStart="0dp"
    app:contentInsetEnd="0dp"
    app:contentInsetLeft="0dp"
    app:contentInsetRight="0dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        android:src="@drawable/icon_list_active"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/toolbar_bottom_button_margin"
        android:layout_marginBottom="@dimen/toolbar_bottom_button_margin"
        android:layout_weight="1"
        android:src="@drawable/icon_grid"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/toolbar_bottom_button_margin"
        android:layout_marginBottom="@dimen/toolbar_bottom_button_margin"
        android:layout_weight="1"
        android:src="@drawable/icon_discover"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/toolbar_bottom_button_margin"
        android:layout_marginBottom="@dimen/toolbar_bottom_button_margin"
        android:layout_weight="1"
        android:src="@drawable/icon_contacts"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/toolbar_bottom_button_margin"
        android:layout_marginBottom="@dimen/toolbar_bottom_button_margin"
        android:layout_weight="1"
        android:src="@drawable/icon_profile"/>

</android.support.v7.widget.Toolbar>
