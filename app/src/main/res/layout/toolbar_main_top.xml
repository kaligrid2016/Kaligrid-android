<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/top_toolbar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/toolbar_top_height"
    android:layout_gravity="top"
    android:gravity="center_vertical"
    android:background="?attr/colorPrimary">

    <TextView
        android:id="@+id/app_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/toolbar_top_margin"
        android:layout_marginStart="@dimen/toolbar_top_margin"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        style="@style/ToolbarAppName"
        android:text="@string/app_name" />

    <ImageView
        android:id="@+id/toolbar_top_today_image"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/icon_top_today_container" />

    <TextView
        android:id="@+id/top_toolbar_today_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/toolbar_top_today_image"
        android:layout_alignStart="@id/toolbar_top_today_image"
        android:layout_alignTop="@id/toolbar_top_today_image"
        android:layout_alignRight="@id/toolbar_top_today_image"
        android:layout_alignEnd="@id/toolbar_top_today_image"
        android:layout_alignBottom="@id/toolbar_top_today_image"
        android:layout_marginTop="5dp"
        android:gravity="center"
        style="@style/TodayCalendarText"
        android:clickable="true" />

</RelativeLayout>
